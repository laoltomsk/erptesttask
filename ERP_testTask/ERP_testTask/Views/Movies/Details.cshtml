@model ERP_testTask.Models.Movie
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>
<hr />

<div>
    <div class="row">
        <div class="col-xs-8">
            <dl class="dl-horizontal">
                <dt>Год выхода</dt>
                <dd>
                    @Html.DisplayFor(model => model.Year)
                </dd>

                <dt>Режиссёр</dt>
                <dd>
                    @Html.DisplayFor(model => model.Director)
                </dd>

                <dt>Описание</dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
        <div class="col-xs-4">
            <img src="@Html.DisplayFor(model => model.PosterURL)" class="img-rounded" width="100%">
        </div>
    </div>
</div>
<p>
    @if (User.Identity.IsAuthenticated)
    {
        if (User.Identity.GetUserId() == Model.UserId)
        {
            @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id })<text> | </text>
        }
    }
    @Html.ActionLink("Вернуться к списку фильмов", "Index")
</p>
